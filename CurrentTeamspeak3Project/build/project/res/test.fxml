<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.beans.property.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.paint.Color?>

<VBox spacing="10" alignment="CENTER" prefWidth="500" prefHeight="650" fx:controller="application.MainWindowController" xmlns:fx="http://javafx.com/fxml">
    <fx:define>
        <Font fx:id="FONT" size="18" />
    </fx:define>
    
    <StackPane alignment="CENTER">
        <Rectangle fill="TRANSPARENT" stroke="GRAY" width="400" height="50" />
        <Text fx:id="infoBox" font="$FONT" />
        	
    </StackPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Connect to Server" prefWidth="350" font="$FONT" onAction="#connectToServer" />
    </HBox>
    <HBox spacing="10" alignment="CENTER">
        <Button text="Start MusikOnMove" prefWidth="200" font="$FONT" onAction="#startStopMusikOnMove" />
        <Button text="Placeholder" prefWidth="200" font="$FONT" onAction="#empty">
        	<tooltip>
        		<Tooltip text="This button does nothing yet"/>
    		</tooltip>	
        </Button>
    </HBox>
    <HBox spacing="10" alignment="CENTER">
        <Label  text="User Name:"  prefWidth="200" font="$FONT"/>
     	<TextField fx:id="userNameTextField" text ="couldNotReadValue" prefWidth="200" font="$FONT"/>
    </HBox>
    <HBox spacing="10" alignment="CENTER">
        <Label text="Unique Id:"  prefWidth="200" font="$FONT"/>
     	<TextField fx:id="uIdTextField" text ="couldNotReadValue" prefWidth="200" font="$FONT"/>
    </HBox>
    <HBox spacing="10" alignment="CENTER">
        <Label text="Ts Ip Adresse:"  prefWidth="200" font="$FONT"/>
     	<TextField fx:id="ipAdressTextField" text="couldNotReadValue" prefWidth="200" font="$FONT"/>
    </HBox>
    <HBox spacing="10" alignment="CENTER">
        <Label text="Serverport:" prefWidth="200" font="$FONT"/>
     	<TextField fx:id="serverPortTextField" text="couldNotReadValue" prefWidth="200" font="$FONT"/>
    </HBox>
    <HBox spacing="10" alignment="CENTER">
        <Label text="Server Query Name:"  prefWidth="200" font="$FONT"/>
     	<TextField fx:id="serverQueryNameTextField" text="couldNotReadValue" prefWidth="200" font="$FONT"/>
    </HBox>
    <HBox spacing="10" alignment="CENTER">
        <Label text="Server Query Password:"  prefWidth="200" font="$FONT"/>
     	<TextField fx:id="serverQueryPasswordTextField" text="couldNotReadValue" prefWidth="200" font="$FONT"/>
    </HBox>
    <HBox spacing="10" alignment="CENTER">
        <Label text="Audio File Name:"  prefWidth="200" font="$FONT"/>
     	<TextField fx:id="audioFileNameTextField" text="couldNotReadValue" prefWidth="200" font="$FONT"/>
    </HBox>
    <HBox spacing="10" alignment="CENTER">
        <Label text="Audio File Lenght:"  prefWidth="200" font="$FONT"/>
     	<TextField fx:id="audioFileLenghtTextField" text="couldNotReadValue" prefWidth="200" font="$FONT"/>
    </HBox>
    <HBox spacing="10" alignment="CENTER">
        <Button text="Exit Program" prefWidth="200" font="$FONT" onAction="#exitSystem" />
        <Button text="Save Current Values" prefWidth="200" font="$FONT" onAction="#saveData" />
    </HBox>
</VBox>