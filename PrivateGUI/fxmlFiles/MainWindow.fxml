<AnchorPane fx:controller="application.MainController"
	xmlns:fx="http://javafx.com/fxml" style="-fx-background-color: #5E82AB;" onKeyPressed="#hotKeyListener" fx:id="anchorPane">
	<VBox spacing="10" alignment="CENTER" prefWidth="1300.0"
		prefHeight="520.0">
		<fx:define>
			<Font fx:id="FONT" size="40" />
		</fx:define>
		<!-- <HBox prefWidth="400" prefHeight="100" style="-fx-background-image: 
			url(/MOOGLogo.png);"> -->
		<HBox alignment="CENTER" spacing="10">
			<ImageView fitWidth="800.0" fitHeight="100.0">
				<Image url="/Logo.PNG"/>
			</ImageView>
		</HBox>
		<HBox spacing="10" alignment="CENTER">
			<StackPane alignment="CENTER">
				<Rectangle fill="#998A42"  stroke="#EBAD14" width="1000"
					height="100">
				</Rectangle>
				<Text fx:id="informationText" font="$FONT" />
			</StackPane>
		</HBox>
		<HBox spacing="10" alignment="CENTER">
			<VBox>
				<Label text="Serial Number (e.g. XD99)" prefWidth="600" />
				<ValidTextField fx:id="serialNumberTextField"
					onKeyReleased="#checkSerialNumber" prefWidth="600" prefHeight="100" 
					font="$FONT" />
			</VBox>
			<VBox>
				<Label text="Date (e.g. 01.01.1970) , Fromat: Day.Month.Year" />
				<ValidTextField fx:id="dateTextField" onKeyReleased="#checkDate"
					prefWidth="600" prefHeight="100" font="$FONT" />
			</VBox>
		</HBox>
		<HBox spacing="10" alignment="CENTER">
			<HBox>
				<Button fx:id="openFileButton" text="Open a file" prefWidth="600"
					prefHeight="100" onAction="#openAFile" ></Button>
			</HBox>
			<HBox>
				<Button fx:id="saveButton" text="Save" prefWidth="600"
					prefHeight="100" onAction="#save">
					<tooltip>
						<Tooltip text="Strg + S" font="$FONT" />
					</tooltip>
				</Button>
			</HBox>
		</HBox>
		<!-- 
		<HBox spacing="10" alignment="CENTER">
			<ComboBox id="comboInterval" fx:id="comboBox" editable="false"
				onAction="#comboBoxSelector" prefWidth="400" prefHeight="100">
				<items>
					<FXCollections fx:factory="observableArrayList">
					</FXCollections>
				</items>
			</ComboBox>
		</HBox>
		 -->
	</VBox>
</AnchorPane>